{
  "metadata": {
    "version": "1.0",
    "description": "Fishing minigame configuration - OSU-style ripple clicking game",
    "note": "Stats (LCK, STR) and rod tier modify these base values"
  },

  "minigame": {
    "pond_dimensions": {
      "width": 500,
      "height": 400,
      "margin": 50
    },
    "base_difficulty": {
      "ripple_count": 8,
      "target_radius": 40,
      "expand_speed": 80,
      "hit_tolerance": 15,
      "spawn_delay": 1.5,
      "max_active_ripples": 2
    },
    "scoring": {
      "perfect_tolerance": 5,
      "good_tolerance": 10,
      "fair_tolerance": 15,
      "perfect_score": 100,
      "good_score": 75,
      "fair_score": 50,
      "min_partial_score": 25
    },
    "success_thresholds": {
      "min_hit_rate": 0.5,
      "min_avg_score": 40
    },
    "quality_tiers": {
      "legendary": {"min_performance": 0.9, "bonus_mult": 1.5},
      "masterwork": {"min_performance": 0.75, "bonus_mult": 1.3},
      "superior": {"min_performance": 0.6, "bonus_mult": 1.15},
      "fine": {"min_performance": 0.4, "bonus_mult": 1.0},
      "normal": {"min_performance": 0.0, "bonus_mult": 0.8}
    }
  },

  "stat_effects": {
    "luck": {
      "description": "Reduces required ripple count (shorter game)",
      "ripple_reduction_per_point": 0.1,
      "min_ripples": 4,
      "max_ripples": 15
    },
    "strength": {
      "description": "Increases hit tolerance (larger click area)",
      "tolerance_bonus_per_point": 0.5,
      "max_tolerance": 30
    },
    "rod_tier": {
      "description": "Higher tier = slower expansion = more time to react",
      "speed_reduction_per_tier": 0.15,
      "min_speed_mult": 0.55,
      "spawn_delay_increase_factor": 1.0
    }
  },

  "tier_scaling": {
    "description": "How fishing spot tier affects difficulty",
    "ripple_multiplier": 0.25,
    "speed_multiplier": 0.2
  },

  "xp_rewards": {
    "description": "XP rewards by tier (like mob kills: T1=100, T2=400, T3=1600, T4=6400)",
    "formula": "100 * (4 ^ (tier - 1))",
    "tier_1": 100,
    "tier_2": 400,
    "tier_3": 1600,
    "tier_4": 6400
  },

  "durability": {
    "success_loss": 1.0,
    "fail_loss_multiplier": 2.0
  },

  "respawn_times": {
    "description": "Respawn times by tier (in seconds)",
    "tier_1": 30,
    "tier_2": 45,
    "tier_3": 60,
    "tier_4": 90
  }
}
