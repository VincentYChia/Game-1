Skill Unlock Tempalte:
{
  "metadata": {
    "version": "1.0",
    "description": "Skill unlock system - defines HOW skills become available to players",
    "note": "Works alongside skills.json. Skills have requirements, this defines unlock methods."
  },

  "skillUnlocks": [
    {
      "unlockId": "unlock_miners_fury",
      "skillId": "miners_fury",
      "unlockMethod": "automatic",
      
      "conditions": {
        "characterLevel": 1,
        "stats": {},
        "titles": [],
        "completedQuests": [],
        "activityMilestones": []
      },

      "unlockTrigger": {
        "type": "level_up",
        "triggerValue": 1,
        "message": "You've unlocked the skill: Miner's Fury!"
      },

      "cost": {
        "gold": 0,
        "materials": [],
        "skillPoints": 0
      },

      "metadata": {
        "narrative": "Given freely to all who begin their journey.",
        "category": "starter_skill"
      }
    },

    {
      "unlockId": "unlock_smiths_focus",
      "skillId": "smiths_focus",
      "unlockMethod": "quest_reward",
      
      "conditions": {
        "characterLevel": 2,
        "completedQuests": ["quest_tutorial_002"]
      },

      "unlockTrigger": {
        "type": "quest_complete",
        "triggerValue": "quest_tutorial_002",
