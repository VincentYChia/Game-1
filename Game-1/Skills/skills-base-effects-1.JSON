{
  "metadata": {
    "version": "1.0",
    "description": "Base effect types - Fundamental building blocks for all skills",
    "note": "Vanilla effects designed as reusable legos. Crafting values scaled appropriately lower."
  },

  "BASE_EFFECT_TYPES": {
    "empower": {
      "description": "Multiplies damage or output quality. Combat/gathering: +100% base. Crafting: +10% base stats.",
      "typicalTier": "1, 2",
      "useCases": ["weapon hits deal 200% damage", "pickaxe breaks nodes 150% faster", "crafted items have 20% better base stats"],
      "tags": ["damage", "output", "multiplier", "combat", "gathering", "crafting"],
      "magnitudeValues": {
        "minor": 0.5,
        "moderate": 1.0,
        "major": 2.0,
        "extreme": 4.0
      },
      "baseValue": "+100% damage or +10% craft stats"
    },

    "quicken": {
      "description": "Increases action frequency or extends mini-game time. Combat/gathering: +50% speed. Crafting: +5 seconds.",
      "typicalTier": "1, 2",
      "useCases": ["attack 50% faster", "harvest 75% quicker", "move 60% faster", "mini-game timer +10 seconds"],
      "tags": ["speed", "haste", "time", "combat", "gathering", "movement", "crafting"],
      "magnitudeValues": {
        "minor": 0.3,
        "moderate": 0.5,
        "major": 0.75,
        "extreme": 1.0
      },
      "baseValue": "+50% speed or +5 seconds"
    },

    "fortify": {
      "description": "Reduces damage taken or resource consumption. Flat reduction applied before percentages.",
      "typicalTier": "1, 2",
      "useCases": ["reduce incoming damage by 20", "tools lose 30% less durability", "mana costs reduced by 15"],
      "tags": ["defense", "reduction", "durability", "cost", "combat", "utility"],
      "magnitudeValues": {
        "minor": 10,
        "moderate": 20,
        "major": 40,
        "extreme": 80
      },
      "baseValue": "20 flat reduction"
    },

    "enrich": {
      "description": "Increases quantity gained from gathering or combat drops only. Does NOT affect crafting output quantity.",
      "typicalTier": "1, 2, 3",
      "useCases": ["gain +3 ore per node", "enemies drop +2 items", "trees yield +5 wood"],
      "tags": ["yield", "quantity", "gathering", "drops", "combat"],
      "magnitudeValues": {
        "minor": 1,
        "moderate": 3,
        "major": 6,
        "extreme": 12
      },
      "baseValue": "+3 bonus items"
    },

    "pierce": {
      "description": "Increases critical hit chance. Combat/gathering: double damage/yield. Crafting: first-try bonus.",
      "typicalTier": "2, 3",
      "useCases": ["25% crit on attacks", "15% double yield on gathers", "20% first-try bonus on crafts"],
      "tags": ["critical", "chance", "rng", "combat", "gathering", "crafting"],
      "magnitudeValues": {
        "minor": 0.1,
        "moderate": 0.15,
        "major": 0.25,
        "extreme": 0.4
      },
      "baseValue": "+15% critical chance"
    },

    "restore": {
      "description": "Instantly replenishes resources. Restores health, mana, or durability immediately.",
      "typicalTier": "1, 2, 3",
      "useCases": ["heal 150 HP instantly", "restore 100 mana", "repair 300 durability"],
      "tags": ["healing", "instant", "recovery", "health", "mana", "durability"],
      "magnitudeValues": {
        "minor": 50,
        "moderate": 100,
        "major": 200,
        "extreme": 400
      },
      "baseValue": "100 resource restored"
    },

    "regenerate": {
      "description": "Restores resources over time. Grants health, mana, or durability per second during duration.",
      "typicalTier": "2, 3",
      "useCases": ["heal 8 HP per second", "restore 5 mana per second", "repair 10 durability per second"],
      "tags": ["healing", "over_time", "sustained", "health", "mana", "durability"],
      "magnitudeValues": {
        "minor": 3,
        "moderate": 5,
        "major": 10,
        "extreme": 20
      },
      "baseValue": "5 per second"
    },

    "elevate": {
      "description": "Increases rarity upgrade chance on crafts or material drops. Shifts RNG toward higher rarity outcomes.",
      "typicalTier": "2, 3, 4",
      "useCases": ["15% chance to upgrade craft rarity", "12% chance for uncommon+ materials", "20% better rarity on mini-game success"],
      "tags": ["rarity", "quality", "upgrade", "crafting", "gathering", "rng"],
      "magnitudeValues": {
        "minor": 0.15,
        "moderate": 0.25,
        "major": 0.4,
        "extreme": 0.6
      },
      "baseValue": "+10% rarity upgrade chance"
    },

    "devastate": {
      "description": "Creates area of effect. Damage, gathering, or effects hit multiple targets in radius.",
      "typicalTier": "3, 4",
      "useCases": ["attack hits 5-tile radius", "gather from 3x3 area", "damage all enemies nearby"],
      "tags": ["aoe", "area", "radius", "combat", "gathering"],
      "magnitudeValues": {
        "minor": 3,
        "moderate": 5,
        "major": 7,
        "extreme": 10
      },
      "baseValue": "5 tile radius"
    },

    "transcend": {
      "description": "Bypasses restrictions or requirements. Ignores tier limits, material requirements, or level gates.",
      "typicalTier": "4",
      "useCases": ["use T4 tools on any tier", "craft T3 recipes at T2 station", "gather T4 nodes with T2 tools"],
      "tags": ["bypass", "restriction", "tier", "unlock", "utility"],
      "magnitudeValues": {
        "minor": 1,
        "moderate": 2,
        "major": 3,
        "extreme": 4
      },
      "baseValue": "Bypass 1 tier/requirement"
    }
  },

  "RARITY_MULTIPLIERS": {
    "common": 1.0,
    "uncommon": 1.15,
    "rare": 1.35,
    "epic": 1.6,
    "legendary": 2.0,
    "mythic": 2.5
  }
}